// @ts-nocheck
import React, { useContext, useState, useLayoutEffect } from "react";
import {
  View,
  Text,
  TextInput,
  TouchableOpacity,
  Modal,
  StyleSheet,
  Alert,
  ScrollView,
  Animated,
} from "react-native";
import { graphqlRequest, setAuthToken } from "../services/api";
import { UserContext } from "../components/ui/UserContext";
import { useNavigation } from "@react-navigation/native";
import AsyncStorage from "@react-native-async-storage/async-storage";
import { LinearGradient } from 'expo-linear-gradient';

export default function CreateRepairRequest() {
  const { token: contextToken } = useContext(UserContext);
  const [itemName, setItemName] = useState("");
  const [problemDescription, setProblemDescription] = useState("");
  const [contactInfo, setContactInfo] = useState("");
  const [popupVisible, setPopupVisible] = useState(false);
  const [loading, setLoading] = useState(false);

  const navigation = useNavigation();
  const scaleAnim = new Animated.Value(0);

  // Configure header with back button
  useLayoutEffect(() => {
    navigation.setOptions({
      title: "Repair Request",
      headerStyle: {
        backgroundColor: '#8B5CF6',
        elevation: 0,
        shadowOpacity: 0,
      },
      headerTintColor: '#fff',
      headerTitleStyle: {
        fontWeight: '700',
        fontSize: 20,
      },
      headerLeft: () => (
        <TouchableOpacity
          onPress={() => navigation.goBack()}
          style={styles.backButton}
        >
          <Text style={styles.backArrow}>‚Üê</Text>
        </TouchableOpacity>
      ),
    });
  }, [navigation]);

  React.useEffect(() => {
    if (popupVisible) {
      Animated.spring(scaleAnim, {
        toValue: 1,
        friction: 5,
        useNativeDriver: true,
      }).start();
    } else {
      scaleAnim.setValue(0);
    }
  }, [popupVisible]);

  const handleCreate = async () => {
    if (!itemName.trim() || !problemDescription.trim() || !contactInfo.trim()) {
      Alert.alert("Missing Information", "Please fill all fields");
      return;
    }

    let tokenToUse = contextToken || (await AsyncStorage.getItem("token"));
    if (!tokenToUse) return Alert.alert("Error", "You are not logged in");

    setAuthToken(tokenToUse);

    const query = `
      mutation CreateRepairRequest($itemName: String!, $problemDescription: String!, $contactInfo: String!) {
        createRepairRequest(
          itemName: $itemName,
          problemDescription: $problemDescription,
          contactInfo: $contactInfo
        ) {
          repairRequest {
            requestId
            status
            itemName
          }
        }
      }
    `;

    const variables = {
      itemName,
      problemDescription,
      contactInfo,
    };

    try {
      setLoading(true);
      const response = await graphqlRequest(query, variables, tokenToUse);

      if (response?.createRepairRequest?.repairRequest) {
        setPopupVisible(true);
        setItemName("");
        setProblemDescription("");
        setContactInfo("");
      } else {
        Alert.alert("Error", "Failed to create repair request");
      }
    } catch (err) {
      Alert.alert("Error", "Check the fields");
    } finally {
      setLoading(false);
    }
  };

  const handlePopupClose = () => {
    setPopupVisible(false);
    navigation.navigate("Profile");
  };

  return (
    <View style={styles.container}>
      <ScrollView 
        showsVerticalScrollIndicator={false}
        contentContainerStyle={styles.scrollContent}
      >
        {/* Header Background */}
        <LinearGradient
          colors={['#8B5CF6', '#A78BFA']}
          style={styles.headerBackground}
        >
          <View style={styles.headerContent}>
            <Text style={styles.headerTitle}>Create Repair Request</Text>
            <Text style={styles.headerSubtitle}>Fill in the details below</Text>
          </View>
        </LinearGradient>

        {/* Main Card */}
        <View style={styles.card}>
          {/* Item Name Input */}
          <View style={styles.inputContainer}>
            <Text style={styles.label}>Item Name</Text>
            <View style={styles.inputWrapper}>
              <Text style={styles.inputIcon}>üì¶</Text>
              <TextInput
                style={styles.input}
                placeholder="Ex: Laptop / Phone "
                placeholderTextColor="#9CA3AF"
                value={itemName}
                onChangeText={setItemName}
              />
            </View>
          </View>

          {/* Problem Description Input */}
          <View style={styles.inputContainer}>
            <Text style={styles.label}>Problem Description</Text>
            <View style={[styles.inputWrapper, styles.textareaWrapper]}>
              <TextInput
                style={[styles.input, styles.textarea]}
                placeholder="Describe the problem in detail..."
                placeholderTextColor="#9CA3AF"
                value={problemDescription}
                onChangeText={setProblemDescription}
                multiline
                numberOfLines={4}
              />
            </View>
          </View>

          {/* Contact Info Input */}
          <View style={styles.inputContainer}>
            <Text style={styles.label}>Contact Info</Text>
            <View style={styles.inputWrapper}>
              <Text style={styles.inputIcon}>üì±</Text>
              <TextInput
                style={styles.input}
                placeholder="Phone Number"
                placeholderTextColor="#9CA3AF"
                keyboardType="numeric"
                value={contactInfo}
                onChangeText={(text) => {
                  const cleaned = text.replace(/[^0-9]/g, "");
                  setContactInfo(cleaned);
                }}
                maxLength={12}
              />
            </View>
          </View>

          {/* Submit Button */}
          <TouchableOpacity
            style={[styles.submitButton, loading && { opacity: 0.6 }]}
            disabled={loading}
            onPress={handleCreate}
            activeOpacity={0.8}
          >
            <LinearGradient
              colors={['#8B5CF6', '#A78BFA']}
              style={styles.gradientButton}
            >
              <Text style={styles.buttonText}>
                {loading ? "Submitting..." : "Submit Request"}
              </Text>
            </LinearGradient>
          </TouchableOpacity>
        </View>
      </ScrollView>

      {/* SUCCESS POPUP */}
      <Modal transparent visible={popupVisible} animationType="fade">
        <View style={styles.popupContainer}>
          <Animated.View 
            style={[
              styles.popupBox,
              {
                transform: [{ scale: scaleAnim }]
              }
            ]}
          >
            {/* Success Icon */}
            <View style={styles.successIconContainer}>
              <LinearGradient
                colors={['#10B981', '#059669']}
                style={styles.successIconGradient}
              >
                <Text style={styles.successIcon}>‚úì</Text>
              </LinearGradient>
            </View>

            <Text style={styles.popupTitle}>Request Submitted!</Text>
            <Text style={styles.popupMessage}>
              Your repair request has been submitted successfully.{"\n"}
            </Text>

            <TouchableOpacity 
              style={styles.closeButton} 
              onPress={handlePopupClose}
              activeOpacity={0.8}
            >
              <LinearGradient
                colors={['#8B5CF6', '#A78BFA']}
                style={styles.closeButtonGradient}
              >
                <Text style={styles.closeButtonText}>OK</Text>
              </LinearGradient>
            </TouchableOpacity>
          </Animated.View>
        </View>
      </Modal>
    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: "#F3F4F6",
  },

  scrollContent: {
    paddingBottom: 40,
  },

  backButton: {
    marginLeft: 12,
    width: 40,
    height: 40,
    borderRadius: 20,
    backgroundColor: 'rgba(255, 255, 255, 0.2)',
    justifyContent: 'center',
    alignItems: 'center',
  },

  backArrow: {
    fontSize: 24,
    color: '#fff',
    fontWeight: '600',
  },

  headerBackground: {
    height: 160,
    borderBottomLeftRadius: 32,
    borderBottomRightRadius: 32,
    paddingHorizontal: 24,
    paddingTop: 20,
  },

  headerContent: {
    marginTop: 10,
  },

  headerTitle: {
    fontSize: 26,
    fontWeight: '700',
    color: '#fff',
    marginBottom: 4,
  },

  headerSubtitle: {
    fontSize: 15,
    color: 'rgba(255, 255, 255, 0.8)',
  },

  card: {
    backgroundColor: "#fff",
    marginHorizontal: 20,
    marginTop: -40,
    borderRadius: 28,
    padding: 24,
    shadowColor: "#8B5CF6",
    shadowOffset: { width: 0, height: 8 },
    shadowOpacity: 0.15,
    shadowRadius: 16,
    elevation: 10,
  },

  inputContainer: {
    marginBottom: 20,
  },

  label: {
    fontSize: 15,
    fontWeight: "700",
    marginBottom: 10,
    color: "#1F2937",
  },

  inputWrapper: {
    flexDirection: 'row',
    alignItems: 'center',
    borderWidth: 2,
    borderColor: "#E5E7EB",
    borderRadius: 16,
    backgroundColor: "#F9FAFB",
    paddingHorizontal: 16,
  },

  textareaWrapper: {
    alignItems: 'flex-start',
    paddingTop: 12,
  },

  inputIcon: {
    fontSize: 20,
    marginRight: 12,
  },

  input: {
    flex: 1,
    paddingVertical: 16,
    fontSize: 15,
    color: "#1F2937",
  },

  textarea: {
    height: 100,
    textAlignVertical: "top",
    paddingTop: 0,
  },

  submitButton: {
    borderRadius: 16,
    overflow: 'hidden',
    marginTop: 8,
  },

  gradientButton: {
    padding: 18,
    alignItems: "center",
    justifyContent: "center",
  },

  buttonText: {
    color: "#fff",
    fontSize: 17,
    fontWeight: "700",
  },

  popupContainer: {
    flex: 1,
    backgroundColor: "rgba(0, 0, 0, 0.6)",
    justifyContent: "center",
    alignItems: "center",
  },

  popupBox: {
    width: "85%",
    backgroundColor: "white",
    padding: 32,
    borderRadius: 28,
    alignItems: "center",
    shadowColor: "#000",
    shadowOffset: { width: 0, height: 10 },
    shadowOpacity: 0.3,
    shadowRadius: 20,
    elevation: 10,
  },

  successIconContainer: {
    marginBottom: 20,
  },

  successIconGradient: {
    width: 80,
    height: 80,
    borderRadius: 40,
    justifyContent: 'center',
    alignItems: 'center',
  },

  successIcon: {
    fontSize: 48,
    color: '#fff',
    fontWeight: '700',
  },

  popupTitle: {
    fontSize: 24,
    fontWeight: "700",
    marginBottom: 12,
    color: "#1F2937",
  },

  popupMessage: {
    fontSize: 16,
    textAlign: "center",
    marginBottom: 28,
    color: "#6B7280",
    lineHeight: 24,
  },

  closeButton: {
    borderRadius: 16,
    overflow: 'hidden',
    width: '100%',
  },

  closeButtonGradient: {
    paddingVertical: 16,
    paddingHorizontal: 40,
    alignItems: 'center',
  },

  closeButtonText: {
    color: "white",
    fontSize: 17,
    fontWeight: "700",
  },
});
